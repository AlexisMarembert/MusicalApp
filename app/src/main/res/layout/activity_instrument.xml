<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InstrumentActivity"
    android:background="@drawable/instrument">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/record"
        android:id="@+id/buttonRecord"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonRecord"
        android:layout_centerHorizontal="true"
        android:text="@string/stopRecord"
        android:id="@+id/buttonStopRecord"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rates_buttons"
        android:layout_toLeftOf="@id/buttonRecord"
        android:gravity="center"
        android:text="@string/E"
        android:id="@+id/buttonEaigu"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonEaigu"
        android:background="@drawable/rates_buttons"
        android:layout_toLeftOf="@id/buttonRecord"
        android:gravity="center"
        android:text="@string/A"
        android:id="@+id/buttonA"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonA"
        android:background="@drawable/rates_buttons"
        android:layout_toLeftOf="@id/buttonRecord"
        android:gravity="center"
        android:text="@string/D"
        android:id="@+id/buttonD"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rates_buttons"
        android:layout_toRightOf="@id/buttonRecord"
        android:gravity="center"
        android:text="@string/G"
        android:id="@+id/buttonG"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonG"
        android:background="@drawable/rates_buttons"
        android:layout_toRightOf="@id/buttonRecord"
        android:gravity="center"
        android:text="@string/B"
        android:id="@+id/buttonB"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonB"
        android:gravity="center"
        android:background="@drawable/rates_buttons"
        android:layout_toRightOf="@id/buttonRecord"
        android:text="@string/E"
        android:id="@+id/buttonEgrave"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250px"
        android:layout_onTopOf="@id/buttonRecord"
        android:background="@android:color/background_dark"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:text="             "
        android:id="@+id/DifferenceIndicator"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/mainButton"
        android:onClick="goToMain"
        android:text="@string/back_menu"/>

</RelativeLayout>